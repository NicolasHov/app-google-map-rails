<html>

    <head>
        <title>Simple Map</title>
        <meta name="viewport" content="initial-scale=1.0">
        <meta charset="utf-8">
        
    </head>
    <body>
        
        <div class="container">
            <%= form_tag(root_path, method: :get) do %>
            <%= label_tag(:latit, "Lattitude:") %>
            <%= text_field_tag(:latit) %>
            <%= label_tag(:longit, "Longitude:") %>
            <%= text_field_tag(:longit) %>
            <%= label_tag(:msg, "Message:") %>
            <%= text_area_tag(:msg, "Mon message ici", size: "24x6") %>
            <%= submit_tag("Search") %>
            <% end %>
           
        </div>
        <div> <%= @info[:msg] %> </div>
        <div id="map"></div>
        
        <%= javascript_tag do %> 
            var map;
            function initMap() {
                var myLatLng = {lat: <%= @info[:latit] %>, lng: <%= @info[:longit] %> };
                
                map = new google.maps.Map(document.getElementById('map'), {
                center: myLatLng,
                zoom: 9
                });
            };
               
             var marker = new google.maps.Marker({
                    position: myLatLng,
                    draggable: true,
                    animation: google.maps.Animation.DROP,
                    map: map,
                    title: '<%= @info[:msg] %>'
                });
              

            
                
        <% end %>

        <style>
            #map {
                height: 500px;
                width: 100%;
                }
                
                .container {
                    height: 80%;
                }
        </style>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDAUarZPNMdG9EjKdGuKvcUyovLI3LdvkQ&callback=initMap" async defer></script>
        
    </body>

</html>